<?xml version="1.0" encoding="utf-8"?>
<com.kungfupandas.ixigotripplanner.ui.FloatingWindowMainView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/white"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/show_text"
    android:textSize="24sp"
    android:text="yooooo"
    android:layout_gravity="center"
    android:textColor="@color/black"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_open_city"
        android:layout_width="match_parent"
        android:text="Let's Plan the Trip"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom|end"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content" />
</LinearLayout>
</com.kungfupandas.ixigotripplanner.ui.FloatingWindowMainView>